{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true,
    "baseUrl": ".",
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
